<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base dark theme -->
    <style name="Base.Theme.PunchPad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Text colors -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/WhiteBlackButton</item>
    </style>

    <!-- Button style: white background, black text -->
    <style name="WhiteBlackButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Application entry point -->
    <style name="Theme.PunchPad" parent="Base.Theme.PunchPad" />
</resources>
