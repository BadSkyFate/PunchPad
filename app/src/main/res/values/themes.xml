<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PunchPad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary colors -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <!-- Text colors -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/BlackWhiteButton</item>
    </style>

    <!-- Black-and-White Button Style -->
    <style name="BlackWhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Application theme -->
    <style name="Theme.PunchPad" parent="Base.Theme.PunchPad" />
</resources>
